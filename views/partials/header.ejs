<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<header>

  <nav id="nav-bar">
    <ul class="horizontal-nav">
        <!-- Static link to home -->
  
        <li class="home"><a href="/">Home</a></li>
        
        <!-- Show links based on authentication and role -->
        <% if (reqInfo.authenticated) { %>
            
            <li><a href="/user/userProfile">My Profile</a> </li>
            <li><a href="/user/userInvoices">My Invoices</a> </li>
            
            <% if(reqInfo.roles.includes("Admin")) { %>
                <li><a href="/products">Products</a></li>
            <% } %>
            
            <% if(reqInfo.roles.includes("Admin") || reqInfo.roles.includes("Manager")) { %>
                <li><a href="/users">Users </a></li>
                <li><a href="/invoices">Invoices</a>  </li>
            <% } %>
           
          
            <li class="welcome">Welcome back!  <%=reqInfo.username%></li>
            <li><a href="/user/logout">Logout</a></li>
            
        <% } else { %>
            <li><a href="/user/register">Register</a> </li>
            <li><a href="/user/login">Login</a></li>
        <% } %>
    </ul> 
</nav>
>
  
</header>
